@model FitnessWebApp.Models.CaloriesIndexViewModel

<div class="mb-3 d-flex align-items-center">
    <h2 class="m-0 me-2">@Model.SelectedDate.ToString("dddd, dd MMM")</h2>
    <form method="get">
        <input type="date" class="form-control" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" onchange="this.form.submit()" name="date"/>
    </form>
</div>
<div class="d-flex justify-content-between align-items-end">
    <h3 class="m-0">Calories</h3>
    <a class="btn btn-primary" asp-action="Create" asp-route-date="@Model.SelectedDate.ToString("yyyy-MM-dd")">New</a>
</div>
<ul class="list-group mt-3">
    @foreach (var log in @Model.CaloriesLogs)
    {
        <li class="list-group-item">@log.Name</li>
    }
</ul>